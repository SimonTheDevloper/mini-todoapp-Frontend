{
  "buildCommand": "npm run build",
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://todoapp-api-1p6m.onrender.com/:path*"
    },
    {
      "source": "/auth",
      "destination": "/login.html"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "has": [
        {
          "type": "cookie",
          "key": "accessToken"
        }
      ],
      "destination": "/dashboard",
      "permanent": false
    },
    {
      "source": "/dashboard",
      "missing": [
        {
          "type": "cookie",
          "key": "accessToken"
        }
      ],
      "destination": "/auth",
      "permanent": false
    }
  ]
}