{
  "buildCommand": "npm run build",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://todoapp-api-1p6m.onrender.com/:path*"
    }
  ],
  "redirects": [
    {
      "source": "/auth",
      "destination": "/login.html"
    },
    {
      "source": "/",
      "has": [
        {
          "type": "cookie",
          "key": "accessToken"
        }
      ],
      "destination": "/dashboard.html",
      "permanent": false
    }
  ]
}